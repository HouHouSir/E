<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="160dp"
    android:background="@color/vertical_bg_color"
    android:paddingRight="3dp"
    >

    <ImageView
        android:id="@+id/iv_horizontal_item_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:transitionName="@string/share_animation"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="50dp"
        >

        <TextView
            android:id="@+id/tv_horizontal_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="[Heavy]唱给自己的么?"
            android:textColor="@color/color_white"
            android:textSize="14sp"
            android:textStyle="bold"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/tv_horizontal_item_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#音乐 "
                android:textColor="@color/color_white_grey"
                android:textSize="12sp"
                />

            <TextView
                android:id="@+id/tv_horizontal_item_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" / 02'48"
                android:textColor="@color/color_white_grey"
                android:textSize="12sp"
                />
        </LinearLayout>
    </LinearLayout>

</FrameLayout>